#! /bin/sh

. ./utils

exit_status=0

run_tail() {
    tail "$@" > out.exp
    run 0 out.exp "tail $*" dctc tail "$@"
    if $fail; then
        exit_status=1
    fi
}

run_tail /etc/bash.bashrc
run_tail /etc/hosts
run_tail -n12 /etc/bash.bashrc
run_tail -n3 /etc/hosts
run_tail -n4242 /etc/bash.bashrc
run_tail --lines 4242 /etc/bash.bashrc
run_tail --lines 12 /etc/bash.bashrc
run_tail -c 12 /etc/bash.bashrc
run_tail --bytes 424242 /etc/bash.bashrc

echo $exit_status
